<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_dynamic_comment_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_dynamic_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="康惠聪"
                android:textColor="@color/name_text" />

            <TextView
                android:id="@+id/iv_dynamic_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLength="10"
                android:text="2016-07-15 08:23:22"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/iv_dynamic_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="能坚持下来就是棒棒哒!"
            android:textColor="@color/content_text"
            android:textSize="12dp"/>

    </LinearLayout>
</LinearLayout>