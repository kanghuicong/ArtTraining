<?xml version="1.0" encoding="utf-8"?>
<com.example.kk.arttraining.ui.homePage.function.chatting.FaceRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FaceRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/rl_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_face"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@null"
            android:src="@mipmap/ib_face" />

        <EditText
            android:id="@+id/et_dynamic_content_comment"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@mipmap/dynamic_content_posting_bj"
            android:hint="评论"
            android:maxLength="150"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="14dp" />

        <Button
            android:id="@+id/bt_dynamic_content_comment"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bt_click"
            android:textColor="@color/white"
            android:text="评论"
            android:textSize="14dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_facechoose"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/rl_input"
        android:background="#f6f5f5"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_contains"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dip"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

</com.example.kk.arttraining.ui.homePage.function.chatting.FaceRelativeLayout>