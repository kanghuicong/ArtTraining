<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_teacher_profession"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="专业" />

            <RadioButton
                android:id="@+id/rb_teacher_school"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="院校" />


        </RadioGroup>

    </LinearLayout>

    <include layout="@layout/main_splitter1" />

    <TextView
        android:id="@+id/tv_default_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:drawableLeft="@mipmap/default_image"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="网络连接失败~"
        android:visibility="gone" />

    <com.example.kk.arttraining.ui.homePage.function.refresh.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/homepage_refresh_head" />

        <com.example.kk.arttraining.ui.homePage.function.refresh.PullableListView
            android:id="@+id/lv_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <include layout="@layout/homepage_refresh_load" />
    </com.example.kk.arttraining.ui.homePage.function.refresh.PullToRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_school_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ListView
            android:id="@+id/lv_teacher_school_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scrollbars="none"></ListView>

        <ListView
            android:id="@+id/lv_teacher_school_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:scrollbars="none"></ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profession_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ListView
            android:id="@+id/lv_teacher_major_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"></ListView>
        <!--android:layout_weight="3"-->


        <GridView
            android:id="@+id/gv_teacher_major_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:numColumns="3"
            android:scrollbars="none"
            android:visibility="gone"></GridView>
        <!--android:layout_weight="1"-->

    </LinearLayout>

</LinearLayout>