<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_homepage_authority"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_teacher_list_header"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_teacher_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="邹志刚"
            android:textColor="@color/content_text"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_teacher_item_specialty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="擅长:声乐指挥"
                android:textColor="@color/grey"
                android:textSize="10sp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/tv_teacher_item_professor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="江西师范大学教授"
                android:textColor="@color/content_text"
                android:textSize="10sp" />



        </LinearLayout>



    </LinearLayout>

</LinearLayout>