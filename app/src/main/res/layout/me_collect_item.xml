<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_homepage_dynamic_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_homepage_dynamic_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.kk.arttraining.custom.view.VipTextView
                        android:id="@+id/tv_homepage_vip_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:visibility="gone"
                        android:text="小龙人"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_homepage_ordinary_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:text="小龙人"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <TextView
                            android:id="@+id/tv_homepage_dynamic_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="十分钟前"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_homepage_dynamic_address"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="吉安"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_homepage_dynamic_identity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="高三"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/collect_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@mipmap/review_background"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:drawablePadding="5dp"
                    android:text="2016.10.12"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_dynamic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"
                android:text="123"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.kk.arttraining.custom.view.EmptyGridView
                    android:id="@+id/gv_dynamic_content_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:layout_marginTop="10dp"
                    android:horizontalSpacing="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dynamic_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/music">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/music_icon" />

                <TextView
                    android:id="@+id/tv_dynamic_music_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:text="0''45"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_dynamic_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />



        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/main_splitter1" />


</LinearLayout>