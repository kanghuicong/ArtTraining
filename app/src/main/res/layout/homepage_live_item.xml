<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_homepage_authority"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.kk.arttraining.custom.view.FilletImageView
            android:id="@+id/iv_homepage_live_header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_video_icon"
            app:border_radius="10dp"
            app:type="round" />

        <TextView
            android:id="@+id/tv_live_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="10sp"
            android:maxLength="16"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_live_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="邹志刚"
            android:textColor="@color/name_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_live_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:drawableLeft="@mipmap/browse"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/name_text"
            android:textSize="12dp" />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_live_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:text="课程"
        android:textColor="@color/title_text"
        android:textSize="10sp" />

</LinearLayout>