<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/score_inquiry"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_school_content_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="江西师范大学"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_school_content_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="公办"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_school_content_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="本科"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_school_content_popularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="人气:1000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_school_content_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="江西南昌"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_school_content_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:text="@string/official_website"
                    android:background="@mipmap/review_background"/>
            </LinearLayout>

            <include layout="@layout/main_splitter4" />

            <com.example.kk.arttraining.custom.view.MyListView
                android:id="@+id/lv_school_content_inform"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.example.kk.arttraining.custom.view.MyListView>

            <include layout="@layout/main_splitter1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_school_content_inquiry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/score_inquiry"
                    android:drawablePadding="10dp"
                    android:text="@string/score_inquiry"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_school_content_information"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/school_information"
                    android:drawablePadding="10dp"
                    android:text="@string/school_information"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <include layout="@layout/main_splitter4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/hot_attention"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <include layout="@layout/main_splitter1" />

            <com.example.kk.arttraining.custom.view.MyListView
                android:id="@+id/lv_school_content_focus"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.example.kk.arttraining.custom.view.MyListView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>