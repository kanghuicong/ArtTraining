<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dynamic_teacher_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:background="@mipmap/dynamic_music"
        android:drawableLeft="@mipmap/word_pic"
        android:clickable="true"
        android:gravity="center|left"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="" />

    <LinearLayout
        android:id="@+id/ll_teacher_comment_music"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:background="@mipmap/dynamic_music"
        android:clickable="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ivAdam"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="15dp"
            android:background="@drawable/music_anim" />

        <TextView
            android:id="@+id/tv_music_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_teacher_comment_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_teacher_comment_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="10dp"
            android:background="@mipmap/dynamic_camere" />
    </FrameLayout>

</LinearLayout>