<?xml version="1.0" encoding="utf-8"?>
<com.example.kk.arttraining.custom.view.AutoSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/me_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <com.example.kk.arttraining.custom.view.MyScrollLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_personal_home_page" />

        <LinearLayout
            android:id="@+id/ll_cloud"
            style="@style/me_linearlayout"
            android:gravity="center">

            <TextView
                style="@style/me_about_textview_left"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/me_cloud"
                android:text="@string/me_cloud" />

            <include layout="@layout/arrow_right_image" />

        </LinearLayout>

        <include layout="@layout/item_divider" />


        <LinearLayout
            android:id="@+id/ll_course"
            style="@style/me_linearlayout"
            android:gravity="center">

            <TextView
                style="@style/me_about_textview_left"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/me_course"
                android:text="@string/me_course" />

            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <include layout="@layout/item_divider" />


        <LinearLayout
            android:id="@+id/ll_order"
            style="@style/me_linearlayout"
            android:gravity="center">


            <TextView
                style="@style/me_about_textview_left"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/me_order"
                android:text="@string/me_order_manage" />


            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <include layout="@layout/item_divider" />


        <LinearLayout
            android:id="@+id/ll_collect"
            style="@style/me_linearlayout"
            android:gravity="center">


            <TextView
                style="@style/me_about_textview_left"
                android:drawableLeft="@mipmap/me_collection"
                android:text="@string/me_collect" />

            <TextView
                android:id="@+id/tv_collect_num"
                style="@style/BaseTextView"
                android:text="" />

            <include layout="@layout/arrow_right_image" />

        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_comments"
            style="@style/me_linearlayout"
            android:gravity="center">


            <TextView
                style="@style/me_about_textview_left"

                android:drawableLeft="@mipmap/me_evaluate"
                android:text="@string/me_comments" />

            <TextView
                android:id="@+id/tv_comment_num"
                style="@style/BaseTextView"
                android:text="(0)"
                android:visibility="gone" />

            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_msg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">


            <TextView
                style="@style/me_about_textview_left"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/me_msg_icon"
                android:text="@string/me_msg" />

            <TextView
                android:id="@+id/tv_msg_num"
                style="@style/BaseTextView"
                android:text="(0)"
                android:visibility="gone" />

            <TextView
                android:id="@+id/iv_me_msg_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/msg_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/msg_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/me_arrow_right" />
            <!--<include-->
            <!---->
            <!--layout="@layout/arrow_right_image"-->
            <!---->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!---->
            <!--android:layout_marginRight="10dp" />-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_certificate"
            style="@style/me_linearlayout"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                style="@style/me_about_textview_left"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/me_authentication"
                android:text="@string/me_certificate" />


            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_transfor"
            style="@style/me_linearlayout"
            android:gravity="center">

            <TextView
                style="@style/me_about_textview_left"
                android:drawableLeft="@mipmap/me_setting_update"
                android:text="@string/me_transfor" />

            <TextView
                android:id="@+id/tv_transfor_num"
                style="@style/BaseTextView"

                android:text="(0)"
                android:visibility="gone" />

            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_coupons"
            style="@style/me_linearlayout"

            android:gravity="center">


            <TextView
                style="@style/me_about_textview_left"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/me_coupon"
                android:text="@string/me_coupons" />


            <include layout="@layout/arrow_right_image" />

        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_setting"
            style="@style/me_linearlayout"
            android:gravity="center">

            <TextView
                style="@style/me_about_textview_left"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/me_set_up"
                android:text="@string/me_setting" />

            <include layout="@layout/arrow_right_image" />

        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/message_text"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="-350px"
            android:orientation="vertical"></LinearLayout>

    </com.example.kk.arttraining.custom.view.MyScrollLayout>

</com.example.kk.arttraining.custom.view.AutoSwipeRefreshLayout>