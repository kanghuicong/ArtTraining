<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.kk.arttraining.custom.view.MyScrollLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="-220px"
            android:background="@mipmap/me_bg"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/me_ll_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/user_header"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/video_play_btn" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/me_tv_phoneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="188****7006"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/me_tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="南昌"
                            android:textColor="@color/white" />


                        <TextView
                            android:id="@+id/me_tv_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="高三"
                            android:textColor="@color/white" />


                        <TextView
                            android:id="@+id/me_tv_schoolName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="江西师大附中"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/me_tv_topicNum"
                        style="@style/BaseTextView"
                        android:text="4"
                        android:textColor="@color/LitterGrey" />

                    <TextView
                        style="@style/BaseTextView"
                        android:layout_marginLeft="5dp"
                        android:text="帖子"
                        android:textColor="@color/LitterGrey" />
                </LinearLayout>

                <include layout="@layout/main_splitter3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/me_tv_focusNum"
                        style="@style/BaseTextView"
                        android:text="7"
                        android:textColor="@color/LitterGrey" />

                    <TextView
                        style="@style/BaseTextView"
                        android:layout_marginLeft="5dp"
                        android:text="关注"
                        android:textColor="@color/LitterGrey" />
                </LinearLayout>

                <include layout="@layout/main_splitter3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/me_tv_fansNum"
                        style="@style/BaseTextView"
                        android:text="3"
                        android:textColor="@color/LitterGrey" />

                    <TextView
                        style="@style/BaseTextView"
                        android:layout_marginLeft="5dp"
                        android:text="粉丝"
                        android:textColor="@color/LitterGrey" />
                </LinearLayout>

                <include layout="@layout/main_splitter3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/me_tv_groupNum"
                        style="@style/BaseTextView"
                        android:text="2"
                        android:textColor="@color/LitterGrey" />

                    <TextView
                        style="@style/BaseTextView"
                        android:layout_marginLeft="5dp"
                        android:text="小组"
                        android:textColor="@color/LitterGrey" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order"
            style="@style/me_linearlayout"
            android:layout_marginTop="5dp"
            android:gravity="center">


            <TextView
                style="@style/me_about_textview_left"
                android:drawableLeft="@mipmap/me_order"
                android:text="@string/me_order_manage" />


            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <include layout="@layout/item_divider" />


        <LinearLayout
            android:id="@+id/ll_coupons"
            style="@style/me_linearlayout"
            android:gravity="center">


            <TextView
                style="@style/me_about_textview_left"
                android:drawableLeft="@mipmap/me_coupon"
                android:text="@string/me_coupons" />


            <include layout="@layout/arrow_right_image" />

        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_collect"
            style="@style/me_linearlayout"
            android:gravity="center">


            <TextView
                style="@style/me_about_textview_left"
                android:drawableLeft="@mipmap/me_collection"
                android:text="@string/me_collect" />


            <include layout="@layout/arrow_right_image" />

        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_comments"
            style="@style/me_linearlayout"
            android:gravity="center">


            <TextView
                style="@style/me_about_textview_left"
                android:drawableLeft="@mipmap/me_evaluate"
                android:text="@string/me_comments" />

            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_certificate"
            style="@style/me_linearlayout"
            android:gravity="center">

            <TextView
                style="@style/me_about_textview_left"
                android:drawableLeft="@mipmap/me_authentication"
                android:text="@string/me_certificate" />

            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <include layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/ll_setting"
            style="@style/me_linearlayout"
            android:gravity="center">

            <TextView
                style="@style/me_about_textview_left"
                android:drawableLeft="@mipmap/me_set_up"
                android:text="@string/me_setting" />

            <include layout="@layout/arrow_right_image" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_text"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="-350px"
            android:background="@color/lightgrey"
            android:orientation="vertical"></LinearLayout>

    </com.example.kk.arttraining.custom.view.MyScrollLayout>

</LinearLayout>