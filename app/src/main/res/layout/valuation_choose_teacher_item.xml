<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_teacher_list_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/default_user_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_teacher_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_teacher_list_professor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="声乐教授"
                android:textSize="@dimen/miniSize"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_teacher_list_specialty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="擅长:声乐指挥"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_teacher_list_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="点评:324"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_teacher_list_focus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="关注:324"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_teacher_isClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@mipmap/clean_uncheck"
        android:focusable="true" />

</LinearLayout>