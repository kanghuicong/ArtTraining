<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_chapter_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/chapter_bj"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chapter_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="12sp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_chapter_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="123"/>

        <TextView
            android:id="@+id/tv_chapter_item_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="123"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chapter_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="16"
                android:textSize="10sp"
                android:text="123"/>

            <TextView
                android:id="@+id/tv_chapter_item_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/browse"
                android:gravity="center"
                android:textSize="10sp"
                android:text="123"
                android:textColor="#b0b0b0"/>

        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/iv_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/replay"
        android:layout_gravity="right" />
</FrameLayout>


