<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/main_title" />

    <!--<com.example.kk.arttraining.custom.view.AutoSwipeRefreshLayout-->
        <!--android:id="@+id/idschool_main_swipe"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lv_school_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:scrollbars="none"></ListView>

                <ListView
                    android:id="@+id/lv_school_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:scrollbars="none"></ListView>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_no_wifi"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@mipmap/no_wifi"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

    <!--</com.example.kk.arttraining.custom.view.AutoSwipeRefreshLayout>-->
</LinearLayout>