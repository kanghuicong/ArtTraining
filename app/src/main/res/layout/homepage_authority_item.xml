<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_homepage_authority"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.example.kk.arttraining.custom.view.FilletImageView
        android:id="@+id/iv_homepage_authority_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:type="round"
        app:border_radius="10dp"
        android:src="@mipmap/default_video_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_authority_teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="邹志刚"
            android:textColor="@color/name_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_authority_teacher_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/teacher_popularity"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="123"
            android:textSize="10sp"
            android:textColor="#d81e06"/>



    </LinearLayout>



    <TextView
        android:id="@+id/tv_authority_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:text="江西师范大学教授"
        android:textColor="@color/title_text"
        android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_authority_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:lines="2"
            android:ellipsize="end"
            android:text="简介"
            android:textColor="@color/content_text"
            android:lineSpacingExtra="2dp"
            android:textSize="11sp" />

</LinearLayout>