<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_page_swipe_ly"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/blue_overlay"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/me_ll_userinfo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/video_play_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/me_tv_phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188****7006"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/me_tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未设置"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/me_tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="未设置"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/me_tv_schoolName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未设置"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/me_ll_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/me_tv_topicNum"
                    style="@style/BaseTextView"
                    android:text="4"
                    android:textColor="@color/LitterGrey" />

                <TextView
                    style="@style/BaseTextView"
                    android:layout_marginLeft="5dp"
                    android:text="帖子"
                    android:textColor="@color/LitterGrey" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/me_ll_foucs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/me_tv_focusNum"
                    style="@style/BaseTextView"
                    android:text="7"
                    android:textColor="@color/LitterGrey" />

                <TextView
                    style="@style/BaseTextView"
                    android:layout_marginLeft="5dp"
                    android:text="关注"
                    android:textColor="@color/LitterGrey" />
            </LinearLayout>

            <include layout="@layout/main_splitter3" />

            <LinearLayout
                android:id="@+id/me_ll_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/me_tv_fansNum"
                    style="@style/BaseTextView"
                    android:text="3"
                    android:textColor="@color/LitterGrey" />

                <TextView
                    style="@style/BaseTextView"
                    android:layout_marginLeft="5dp"
                    android:text="粉丝"
                    android:textColor="@color/LitterGrey" />
            </LinearLayout>

            <include layout="@layout/main_splitter3" />

            <LinearLayout
                android:id="@+id/me_ll_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/me_tv_groupNum"
                    style="@style/BaseTextView"
                    android:text="2"
                    android:textColor="@color/LitterGrey" />

                <TextView
                    style="@style/BaseTextView"
                    android:layout_marginLeft="5dp"
                    android:text="小组"
                    android:textColor="@color/LitterGrey" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>