<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/msg_user_pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/ll_msg_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/msg_user_pic"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msg_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_weight="1"
            android:textSize="@dimen/miniSize"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/msg_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/like_yes" />

        <TextView
            android:id="@+id/msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:text="上午7：54"
            android:textColor="@color/grey"
            android:textSize="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/status_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
         />
    <TextView
        android:gravity="center"
        android:padding="2dp"
        android:visibility="gone"
        android:lines="4"
        android:ellipsize="end"
        android:textSize="10dp"
        android:background="@color/LitterGrey"
        android:id="@+id/tv_msg_status_content"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</LinearLayout>