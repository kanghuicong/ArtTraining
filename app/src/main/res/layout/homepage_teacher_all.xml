<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue_overlay">

        <ImageView
            android:id="@+id/iv_teacher_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/bt_left_white"
            android:padding="5dp"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_experts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:button="@null"
                android:gravity="center"
                android:tag="radio_button0"
                android:text="专家"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/rb_teacher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:tag="radio_button0"
                android:text="名师"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/rb_intelligent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:button="@null"
                android:gravity="center"
                android:tag="radio_button0"
                android:text="达人"
                android:textColor="@color/white"/>

        </RadioGroup>

        <ImageView
            android:id="@+id/iv_teacher_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@mipmap/icon_search_white" />
    </LinearLayout>

    <com.example.kk.arttraining.custom.view.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>