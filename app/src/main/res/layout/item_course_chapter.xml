<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_art_lesson"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/ViewBackground"></View>

    <TextView
        android:text="中央音乐学院钢琴考级"
        android:layout_below="@+id/divider"
        android:id="@+id/chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bigSize" />

    <LinearLayout
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/chapter_name"
        android:id="@+id/ll_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="2017-01-21 14:20"
            android:textSize="@dimen/miniSize"
            android:id="@+id/course_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/miniSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至" />

        <TextView
            android:text="15:20"
            android:textSize="@dimen/miniSize"
            android:id="@+id/course_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/course_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="123人"
            android:textSize="12sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_time">

        <TextView
            android:text="直播￥"
            android:id="@+id/course_live_price_title"
            android:textColor="#CD661D"
            android:textSize="@dimen/miniSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="99"
            android:id="@+id/course_live_price"
            android:textColor="#CD661D"
            android:textSize="@dimen/miniSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




    <Button
        android:id="@+id/btn_course_chapter"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/blue_overlay"
        android:layout_width="160px"
        android:layout_height="80px" />
</RelativeLayout>