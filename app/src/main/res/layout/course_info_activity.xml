<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_course_cover_pic"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_teacher_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_course_tecName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Kritan Chong 克里斯蒂安张"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_course_videoNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_course_tecName"
                        android:drawableLeft="@mipmap/me_phone"
                        android:text="5视频" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_course_tecName"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_course_videoNum"
                        android:drawableLeft="@mipmap/me_phone"
                        android:text="初级" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="￥417"
                        android:textColor="@color/red"
                        android:textSize="22sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_coure_raise_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥354"
                        android:textColor="@color/red"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_coure_raise_money"
                        android:text="参与众筹"
                        android:textColor="@color/black"
                        android:textSize="@dimen/normalSize" />

                    <include
                        android:id="@+id/sp1"
                        layout="@layout/main_splitter3"
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tv_coure_raise_money" />

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/sp1">

                        <TextView
                            android:id="@+id/tv_course_raise_num"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textColor="@color/blue_overlay" />

                        <TextView
                            android:id="@+id/tv_course_raise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_course_raise_num"
                            android:text="支持数" />

                        <TextView
                            android:id="@+id/tv_course_raise_yet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_course_raise"
                            android:text="￥3729"
                            android:textColor="@color/blue_overlay" />

                        <TextView
                            android:id="@+id/tv_course_raise_yet_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_course_raise_yet"
                            android:text="支持数" />

                        <ProgressBar
                            android:id="@+id/tv_course_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="150dp"
                            android:layout_height="15dp"
                            android:layout_below="@+id/tv_course_raise"
                            android:layout_marginTop="3dp"
                            android:max="200"
                            android:maxHeight="100dp"
                            android:minHeight="100dp"
                            android:progress="50"
                            android:progressDrawable="@drawable/progress" />

                        <TextView
                            android:id="@+id/tv_course_progress_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_course_progress"
                            android:layout_marginTop="3dp"
                            android:text="当前进度20%" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_course_raise"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_raise_btn"
                        android:text="参与众筹"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normalSize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tv_course_study_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="1234567次\n学习" />

                    <com.example.kk.arttraining.custom.view.MyGridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:numColumns="6"></com.example.kk.arttraining.custom.view.MyGridView>

                    <View
                        android:id="@+id/diver_view"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_below="@+id/tv_course_study_num"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightgrey" />

                    <LinearLayout
                        android:id="@+id/ll_course_describe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/diver_view"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_course_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="架子鼓初级教程"
                            android:textColor="@color/black"
                            android:textSize="@dimen/bigSize"
                            android:textStyle="bold" />

                        <com.example.kk.arttraining.custom.view.JustifyText
                            android:id="@+id/tv_course_describe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="中央经济工作会议16日闭幕，5000多字的会议通稿透露出很多重要经济信号。2017年经济工作怎么干，楼市、汇率、货币政策等经济热点怎么办，哪些政策将影响你生活。梳理会议通稿全文，这16个要点值得你认真读一读。" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_chapter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_course_describe"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#D3D3D3"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/iv_unfold_chapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/me_major" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="章节列表" />

                    </LinearLayout>

                    <com.example.kk.arttraining.custom.view.MyListView
                        android:id="@+id/lv_course_chapter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_chapter"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="2dp"></com.example.kk.arttraining.custom.view.MyListView>

                    <View
                        android:id="@+id/diver_view2"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_below="@+id/lv_course_chapter"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightgrey" />

                    <TextView
                        android:id="@+id/tv_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/diver_view2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="推荐其他大师" />

                    <com.example.kk.arttraining.custom.view.MyGridView
                        android:id="@+id/gv_course_recommend_tec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_recommend"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:numColumns="3"></com.example.kk.arttraining.custom.view.MyGridView>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course_consult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/icon_consult"
                android:gravity="center"
                android:text="咨询" />

            <TextView
                android:id="@+id/tv_course_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/icon_consult"
                android:gravity="center"
                android:text="vip免费听" />

            <TextView
                android:id="@+id/tv_course_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/icon_consult"
                android:gravity="center"
                android:text="分享" />

            <Button
                android:id="@+id/btn_course_buy"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@color/blue_overlay"
                android:text="立即购买"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>